@model Check02.Models.MdCao_Dono

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdCao_Dono)

    <div class="form-group">
        @Html.LabelFor(model => model.NmDono, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdDono", new SelectList(ViewBag.Donos, "IdDono", "NmDono"), "Selecione o Dono",
           new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdDono, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NmCao, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdCao", new SelectList(ViewBag.Cao, "IdCao", "NmCao"), "Selecione o Cão",
           new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdCao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <input type="button" class="btn btn-default" value="Voltar" onclick="location.href='@Url.Action("Index", "Cao_Dono")'" />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
